---
interface Props {
  stack: string[];
}

const { stack } = Astro.props;
---

<ul class="flex flex-wrap gap-1.5 mt-2">
  {
    stack.map((tech) => (
      <li class="text-xs text-gray-700 border border-gray-300 px-2 py-0.5 rounded-md dark:text-gray-100">
        {tech}
      </li>
    ))
  }
</ul>
