---
import ThemeToggle from "./ThemeToggle.astro";

const links = [
  {
    title: "Experiencia",
    label: "experiencia",
    url: "/#experiencia",
  },
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#proyectos",
  },
  {
    title: "Sobre m√≠",
    label: "sobre-mi",
    url: "/#sobre-mi",
  },
  {
    title: "Servicios",
    label: "servicios",
    url: "/services",
  },
  {
    title: "Linkedin",
    label: "linkedin",
    url: "https://www.linkedin.com/in/abelguardop/",
  },
];
---

<header class="fixed top-0 w-full h-auto z-10">
  <nav
    class="h-auto py-2 md:h-12 m-auto flex flex-wrap justify-center items-center gap-x-4 gap-y-2 text-sm bg-[#fffefc40] dark:bg-gray-950/40 backdrop-blur-sm"
  >
    {
      links.map((link) => (
        <a
          class="text-gray-600 dark:text-gray-400 hover:text-indigo-700 dark:hover:text-blue-200 font-medium transition"
          aria-label={link.label}
          href={link.url}
          target={link.label === "linkedin" ? "_blank" : ""}
        >
          {link.title}
        </a>
      ))
    }
    <ThemeToggle />
  </nav>
</header>
