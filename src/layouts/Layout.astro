---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio de Abel Guardo - Frontend Developer especializado en React"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Portfolio - Abel Guardo</title>
    <ViewTransitions />
  </head>
  <body class="relative text-gray-800 dark:text-gray-200">
    <div
      class="absolute inset-0 -z-10 h-full w-full bg-[#fffefc] dark:bg-gray-950"
    >
      <div
        class="absolute h-full w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] dark:bg-[radial-gradient(#111827_1px,transparent_1px)]
        [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)]"
      >
      </div>
    </div>
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        color-scheme: light dark;
      }
      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
        background: #fffefc;
      }
      body {
        min-height: 100vh;
      }
    </style>
  </body>
</html>
